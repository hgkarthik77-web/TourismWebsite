@{
    ViewData["Title"] = "About";
}

<section class="about-hero">
    <div class="about-overlay"></div>

    <div class="about-content text-center">
        <h1>About Us</h1>
        <p>
            Explore breathtaking destinations at unbeatable prices.
            Book now and make unforgettable memories without breaking the bank!
        </p>
    </div>

    <!-- Overlapping Card -->
    <div class="about-card">
        <img src="https://www.gopravasa.com/_next/image?url=%2Fassets%2Fabout-us-heroimage.jpeg&w=1920&q=75" alt="About Image">
    </div>
</section>
<!-- ================= WHO WE ARE SECTION ================= -->
<section class="about-section py-5">
    <div class="container">

        <div class="row align-items-center">

            <!-- LEFT CONTENT -->
            <div class="col-lg-6">

                <h3 class="section-title">
                    <span class="title-bar"></span> Who We Are
                </h3>

                <p>
                    At Poornasatya travels, we’re all about making adventure accessible and memorable.
                    Whether you're an experienced trekker or just starting out,
                    we offer carefully curated travel experiences that let you
                    discover stunning landscapes and new cultures.
                </p>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <h5><strong>Our Vision</strong></h5>
                        <p>
                            Poornasatya travels redefines tourism with seamless, high-quality travel,
                            fostering trust, adventure, and unforgettable experiences worldwide.
                        </p>
                    </div>

                    <div class="col-md-6">
                        <h5><strong>Our Mission</strong></h5>
                        <p>
                            We craft expert travel experiences, blending adventure,
                            comfort, and culture, ensuring cherished memories
                            with top-tier service.
                        </p>
                    </div>
                </div>

            </div>

            <!-- RIGHT IMAGE CARD -->
            <div class="col-lg-6 text-center">
                <div class="about-image-card">
                    <img src="https://plus.unsplash.com/premium_photo-1716999430232-6597f96154a6?q=80&w=1170&auto=format&fit=crop"
                         class="img-fluid"
                         alt="About Poornasatya travelsa">
                </div>
            </div>

        </div>

        <!-- STATS ROW -->
        <div class="about-stats mt-5">
            <div class="stats-wrapper">

                <div class="stat-box">
                    <div class="stat-icon">👥</div>
                    <h3>100K+</h3>
                    <p>Happy Travelers</p>
                </div>

                <div class="stat-divider"></div>

                <div class="stat-box">
                    <div class="stat-icon">🧳</div>
                    <h3>500+</h3>
                    <p>Successful Trips</p>
                </div>

                <div class="stat-divider"></div>

                <div class="stat-box">
                    <div class="stat-icon">🏆</div>
                    <h3>8+</h3>
                    <p>Years Experience</p>
                </div>

                <div class="stat-divider"></div>

                <div class="stat-box">
                    <div class="stat-icon">🌍</div>
                    <h3>60+</h3>
                    <p>Global Destinations</p>
                </div>

            </div>
        </div>

    </div>
</section>

